{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "es2022",
    "moduleResolution": "Node",
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "paths": {
      "@quiz-bot/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "./vite.config.ts"
  ]
}